<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardSingleItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CardViewStyle"
    android:orientation="vertical"
    android:layout_gravity="center"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/pickuponeminute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/nunito_semibold"
                android:text="2 Hours and 33 minutes left to reach this package."
                android:textSize="12sp"
                android:padding="20dp"
                android:textStyle="bold"
                android:textColor="@color/bg_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/photoofme"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/callCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg"
                    android:layout_weight="9"
                    android:paddingLeft="30dp"
                    android:textColor="@color/white"
                    android:text="Delivered"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/callcustomer"
                    />


            </LinearLayout>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Name:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Phone Number:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Price:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Weight:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Nearest Sign:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Notes:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Status:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Date:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />





                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Process Number:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Order Number:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="client Address:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_gravity="left|center"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>





                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="------"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="left|center"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="Ahmed Mohamed Alamin"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:id="@+id/NumberOfClient"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="+201143756046"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />



                <TextView
                    android:id="@+id/TotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="740 EP"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/Weight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="1.35 KG"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/nearest_sign_note"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="Next to kher zaman Supermarket and this text for make sure disign is good for long text.this is the third line and i will keep writing till it reach for the fourth one. "
                    android:textColor="@color/colorPrimaryDark"
                    android:lines="3"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/notes_of_shipping"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="I'll be avalable from 3pm to 6pm"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />





                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="package in it's way"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="28/4/2021"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />





                <TextView
                    android:id="@+id/processNum"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="Last process"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/orderNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="7645636"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />


                <TextView
                    android:id="@+id/clientAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="left|center"
                    android:layout_marginEnd="8dp"
                    android:text="Giza - Haram"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    />

            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            >

            <Button
                android:id="@+id/acceptbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:text="Delivered"
                android:padding="10dp"
                />


            <Button
                android:id="@+id/rejectbtn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg2"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:text="can't Reached"/>

        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>